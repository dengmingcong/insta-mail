<mjml>
  <mj-head>
    <mj-attributes>
      <mj-class name="primary-color" color="#65558F"></mj-class>
      <mj-all padding="0" />
      <mj-class name="heading-text"
        font-family="'Helvetica Neue', Helvetica, Arial, 'PingFang SC', 'Microsoft YaHei', sans-serif"
        font-weight="500" font-size="16px" line-height="24px" color="#65558F" />
      <mj-class name="heading-container" padding-bottom="8px" />
      <mj-class name="not-the-first-heading-container" padding-top="24px" />
      <mj-class name="heading-column" padding-bottom="4px"
        border-bottom="2px solid #EADDFF" />
      <mj-class name="data-table" table-layout="fixed" width="100%" color="#666"
        font-family="'Helvetica Neue', Helvetica, Arial, 'PingFang SC', 'Microsoft YaHei', sans-serif" />
    </mj-attributes>
    <mj-style>
      .header-border {
        border-top: 1px solid rgba(0, 0, 0, 0.1);
        border-left: 1px solid rgba(0, 0, 0, 0.1);
        border-right: 1px solid rgba(0, 0, 0, 0.1);
      }

      .content-border {
        border-bottom: 1px solid rgba(0, 0, 0, 0.1);
        border-left: 1px solid rgba(0, 0, 0, 0.1);
        border-right: 1px solid rgba(0, 0, 0, 0.1);
      }

      .data-table table {
        background: #eaebec;
        border-radius: 4px;
        text-shadow: 1px 1px 0px #fff;
        box-shadow: 0 1px 2px #d1d1d1;
      }

      .data-table table th {
        padding: 8px 0;
        background: #ededed;
      }

      .data-table table th:first-child {
        text-align: left;
        padding-left: 8px;
      }

      .data-table table tr:first-child th:first-child {
        border-top-left-radius: 4px;
      }

      .data-table table tr:first-child th:last-child {
        border-top-right-radius: 4px;
      }

      .data-table table tr {
        text-align: left;
      }

      .data-table table td:first-child {
        padding-left: 8px;
        text-align: left;
        border-left: 0;
      }

      .data-table table td {
        padding: 8px 8px 8px 0;
        background: #fafafa;
      }

      .data-table tr:nth-child(even) td {
        background: #f6f6f6;
      }

      .data-table tr:last-child td {
        border-bottom: 0;
      }

      .data-table tr:last-child td:first-child {
        border-bottom-left-radius: 4px;
      }

      .data-table tr:last-child td:last-child {
        border-bottom-right-radius: 4px;
      }

      .data-table table tr:hover td {
        background: #f2f2f2;
      }
    </mj-style>
  </mj-head>
  <mj-body width="720px">
    <!-- Spacer -->
    <mj-section>
      <mj-column>
        <mj-spacer height="24px" />
      </mj-column>
    </mj-section>
    <!-- Header -->
    <mj-section background-color="#EADDFF" border-radius="8px 8px 0 0"
      css-class="header-border" padding="24px 0">
      <mj-column>
        <mj-text align="center"
          font-family="'Helvetica Neue', Helvetica, Arial, 'Lantinghei SC', 'PingFang SC', 'Microsoft YaHei', sans-serif"
          font-size="30px" font-weight=500 line-height="38px"
          letter-spacing="0.4em" mj-class="primary-color">
          接口测试报告
        </mj-text>
      </mj-column>
    </mj-section>
    <!-- Content -->
    <mj-wrapper css-class="content-border" border-radius="0 0 8px 8px"
      background-color="rgba(242, 242, 247, 0.3)" padding="0 30px 30px 30px">
      <!-- General -->
      <mj-section padding="24px 0">
        <mj-column>
          <mj-text
            font-family="'Helvetica Neue', Helvetica, Arial, 'PingFang SC', 'Microsoft YaHei', sans-serif"
            font-size="14px" line-height="16px">
            <p style="margin: 0 0 8px 0;">测试结论: <span
                style="color: green;">通过</span></p>
            <p style="margin: 8px 0;">项目名称: 个性化广告和个性化内容开关</p>
            <p style="margin: 8px 0;">测试人员: Raigor</p>
            <p style="margin: 8px 0 0 0;">开发人员: Steam</p>
          </mj-text>
        </mj-column>
      </mj-section>
      <!-- 项目统计 -->
      <mj-section mj-class="heading-container">
        <mj-column mj-class="heading-column">
          <mj-text mj-class="heading-text">项目统计</mj-text>
        </mj-column>
      </mj-section>
      <mj-section>
        <mj-column>
          <mj-table mj-class="data-table" css-class="data-table">
            <thead>
              <tr>
                <th scope="col" width="20%">统计项</th>
                <th scope="col" width="20%">预期</th>
                <th scope="col" width="20%">实际</th>
                <th scope="col" width="40%">偏差原因</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>提测时间</td>
                <td>2024.6.12</td>
                <td>2024.6.12</td>
                <td></td>
              </tr>
              <tr>
                <td>测试完成时间</td>
                <td>2024.6.12</td>
                <td>2024.6.12</td>
                <td></td>
              </tr>
              <tr>
                <td>测试工时（天）</td>
                <td>1</td>
                <td>2</td>
                <td>一些说明文字</td>
              </tr>
              <tr>
                <td>项目工时（天）</td>
                <td>3.3</td>
                <td>3.3</td>
                <td></td>
              </tr>
              <tr>
                <td>开发预估工时（天）</td>
                <td>5</td>
                <td>5</td>
                <td></td>
              </tr>
            </tbody>
          </mj-table>
        </mj-column>
      </mj-section>
      <!-- 需求变更 -->
      <mj-section mj-class="heading-container not-the-first-heading-container">
        <mj-column mj-class="heading-column">
          <mj-text mj-class="heading-text">需求变更</mj-text>
        </mj-column>
      </mj-section>
      <mj-section>
        <mj-column>
          <mj-table mj-class="data-table" css-class="data-table">
            <thead>
              <tr>
                <th scope="col" width="5%">ID</th>
                <th scope="col" width="95%">变更内容</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>1</td>
                <td>一些文字说明变更内容</td>
              </tr>
              <tr>
                <td>2</td>
                <td>另外一些文字说明变更内容</td>
              </tr>
            </tbody>
          </mj-table>
        </mj-column>
      </mj-section>
      <!-- 风险 -->
      <mj-section mj-class="heading-container not-the-first-heading-container">
        <mj-column mj-class="heading-column">
          <mj-text mj-class="heading-text">风险</mj-text>
        </mj-column>
      </mj-section>
      <mj-section>
        <mj-column>
          <mj-text>
            一些风险的说明。
          </mj-text>
        </mj-column>
      </mj-section>
      <!-- 建议 -->
      <mj-section mj-class="heading-container not-the-first-heading-container">
        <mj-column mj-class="heading-column">
          <mj-text mj-class="heading-text">建议</mj-text>
        </mj-column>
      </mj-section>
      <mj-section>
        <mj-column>
          <mj-text>
            一些建议的说明。
          </mj-text>
        </mj-column>
      </mj-section>
      <!-- bug 统计 -->
      <mj-section mj-class="heading-container not-the-first-heading-container">
        <mj-column mj-class="heading-column">
          <mj-text mj-class="heading-text">Bug 统计</mj-text>
        </mj-column>
      </mj-section>
      <mj-section>
        <mj-column>
          <mj-table mj-class="data-table" css-class="data-table">
            <thead>
              <tr>
                <th scope="col" width="40%">指标</th>
                <th scope="col" width="10%">数据</th>
                <th scope="col" width="50%">备注</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>阻塞性 bug</td>
                <td>0</td>
                <td></td>
              </tr>
              <tr>
                <td>阻塞性 bug 修复时长超过 1 天的数量</td>
                <td>1</td>
                <td></td>
              </tr>
              <tr>
                <td>二次缺陷数量</td>
                <td>0</td>
                <td></td>
              </tr>
              <tr>
                <td>总 bug 数量</td>
                <td>25</td>
                <td>一些说明文字</td>
              </tr>
            </tbody>
          </mj-table>
        </mj-column>
      </mj-section>
      <mj-section padding-top="8px">
        <mj-column>
          <mj-image
            src="https://quickchart.io/chart?c={type:'line',data:{labels:['2024-07-01','2024-07-02','2024-07-03','2024-07-04','2024-07-05','2024-07-06','2024-07-07'],datasets:[{label:'实际剩余 bug',data:[50,45,40,35,30,25,20],borderColor:'rgba(255, 99, 132, 1)',fill:false},{label:'计划剩余 bug',data:[50,40,30,20,10,5,0],borderColor:'rgba(54, 162, 235, 1)',fill:false}]},options:{title:{display:true,text:'Bug 燃尽图'},scales:{xAxes:[{type:'time',time:{unit:'day'}}],yAxes:[{ticks:{beginAtZero:true}}]}}}"
            alt="Chart" align="left" border="1px solid #ededed"
            border-radius="4px" />
        </mj-column>
      </mj-section>
      <!-- 测试覆盖的接口 -->
      <mj-section mj-class="heading-container not-the-first-heading-container">
        <mj-column mj-class="heading-column">
          <mj-text mj-class="heading-text">测试覆盖的接口</mj-text>
        </mj-column>
      </mj-section>
      <mj-section>
        <mj-column>
          <mj-table mj-class="data-table" css-class="data-table">
            <thead>
              <tr>
                <th scope="col" width="5%">ID</th>
                <th scope="col" width="95%">接口 URL</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>1</td>
                <td>/iot/api/accessories/v1/addWaterSoftner</td>
              </tr>
              <tr>
                <td>2</td>
                <td>/iot/api/accessories/v1/deleteWaterSoftner</td>
              </tr>
              <tr>
                <td>3</td>
                <td>/iot/api/accessories/v1/replaceWaterSoftner</td>
              </tr>
              <tr>
                <td>4</td>
                <td>/iot/api/accessories/v1/replaceWaterSoftner</td>
              </tr>
            </tbody>
          </mj-table>
        </mj-column>
      </mj-section>
    </mj-wrapper>
  </mj-body>
</mjml>